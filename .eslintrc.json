{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"plugin:@typescript-eslint/recommended",
		"prettier/@typescript-eslint",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "script"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"settings": {
		"import/resolver": {
			"typescript": {

			}
		}
	},
	"rules": {
		"no-console": "off",
		"prettier/prettier": "error",
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never"
			}
		],
		"import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.ts"]}]
	}
}